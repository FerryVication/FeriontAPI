    <style>
      @import url('https://fonts.googleapis.com/css2?family=Merriweather&display=swap');
        body {
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #2c3e50, #34495e);
            color: #ecf0f1;
        }
        header {
            background-color: #1abc9c;
            color: white;
            padding: 15px 20px;
